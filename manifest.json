{
  "manifest_version": 3,
  "name": "EasyRapport",
  "version": "1.0.1",
  "description": "Création de rapports circonstanciés tâche par tâche pour Gmail. Licence : GPLv3.",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png"
    }
  },
  "permissions": [
    "storage",
    "clipboardWrite"
  ]
}
